<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matteo.tesidopocatastrofe.Menu">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="SINGLE CHANNEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuSingle"
            android:layout_marginTop="20dp" />

        <Button
            android:text="SCENES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuScenes" />

        <Button
            android:text="STACK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuStack"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:src="@android:drawable/bottom_bar"
            android:id="@+id/imageView" />

        <Button
            android:text="TEST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuTest"
            android:layout_marginTop="20dp" />

        <Button
            android:text="SETTINGS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuSettings"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:src="@android:drawable/bottom_bar"
            android:id="@+id/imageView" />

        <Button
            android:text="SAVE SHOW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuSave"
            android:layout_marginTop="20dp" />

        <Button
            android:text="LOAD SHOW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuLoad" />
    </LinearLayout>



</RelativeLayout>
